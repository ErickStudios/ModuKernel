{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ModuCandy",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operations"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#modules"
		},
		{
			"include": "#modern"
		}
	],
	"repository": {
		"variables": {
			"patterns": [
				{
				"match": "\\b([A-Z]\\w*)\\s+(\\blet\\b)\\s+([\\w:.]+)",
				"captures": {
					"1": { "name": "entity.name.class.moducandy" },   
					"2" : { "name": "keyword.moducandy" },
					"3": { "patterns": [
						{"match": "(\\w+)\\:\\:(?=\\w+)","captures": {"1": {"name": "entity.name.class"} }},
						{"name": "variable.moducandy" ,"match": "\\w+"}
					]}
				}
				}
			]
		},
		"modules": {
			"patterns": [{
				"match": "(\\w+)\\:\\:(?=\\w+)",
				"captures": {
					"1": {"name": "entity.name.class"}
				}
			}]
		},
		"functions": {
			"patterns": [
				{
				"match": "\\b([A-Z]\\w*)\\s+(\\bfn\\b)\\s+([\\w:.]+)\\s*\\(\\)",
				"captures": {
					"1": { "name": "entity.name.class.moducandy" },   
					"2" : { "name": "keyword.moducandy" },
					"3": { "patterns": [
						{"match": "(\\w+)\\:\\:(?=\\w+)","captures": {"1": {"name": "entity.name.class"} }},
						{"name": "entity.name.function.moducandy" ,"match": "\\w+"}
					]}
				}
				},
				{
					"name": "entity.name.function.moducandy",
					"match": "\\w+(?=\\(\\))"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.moducandy",
				"match": "\\b(unsafe|fn|candy|let)\\b"
			},
			{
				"name": "keyword.control.moducandy",
				"match": "\\b(return)\\b"
			}]
		},
		"operations": {
		"patterns": [
			{
				"match": "(\\b(?:r1|r2|r3|r4|r5|r6)\\b)(\\+|\\-|\\*|/|\\?|\\=)(\\b(?:r1|r2|r3|r4|r5|r6)\\b)",
				"captures": {
					"1": { "name": "variable.moducandy" },   
					"2": { "name": "keyword.operator.moducandy" }, 
					"3": { "patterns": [
						{"match": "(\\w+)\\:\\:(?=\\w+)","captures": {"1": {"name": "entity.name.class"} }},
						{"name": "variable.moducandy" ,"match": "\\w+"}
					]}
				}
			},
			{
				"match": "(\\b(?:r1|r2|r3|r4|r5|r6)\\b)(\\=)(\\d+)",
				"captures": {
					"1": { "name": "variable.moducandy" },
					"2": { "name": "keyword.operator.assignment.moducandy" },
					"3": { "name": "constant.numeric.moducandy" }
				}
			}
		]
		},
		"comments": {
			"name" : "comment",
			"begin": "//",
			"end": "\n"
		},
		"strings": {
			"name": "string.quoted.double.moducandy",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.moducandy",
					"match": "\\\\."
				}
			]
		},
		"modern": {
			"patterns": [{
				"match": "(\\bstru\\b) ([\\w:.]+)",
				"captures": {
					"1": { "name" : "keyword.moducandy"},
					"2":  { "patterns": [
						{"match": "(\\w+)\\:\\:(?=\\w+)","captures": {"1": {"name": "entity.name.class"} }},
						{"name": "entity.name.type.struct.moducandy" ,"match": "\\w+"}
					]}
				}
			},
			{
				"match": "(\\bpbl\\b) (\\b(candy|fn)\\b)",
				"captures": {
					"1": {"name": "keyword.moducandy"},
					"2": {"name": "keyword.moducandy"}
				}
			}]
		}
	},
	"scopeName": "source.cdy"
}